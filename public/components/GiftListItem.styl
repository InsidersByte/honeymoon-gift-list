$avatar-width = 60px
$top-bottom-margin = 12px

.root
    align-items stretch
    cursor move
    display flex
    padding 0 16px

    // to compete with bootstrap 'Jumbotron p'
    .description
        font-size 14px

.avatar
    border-radius 50%
    height $avatar-width
    margin $top-bottom-margin 16px $top-bottom-margin 0
    width $avatar-width

.textContainer
    flex 1
    margin-right 16px

.name
    font-size 16px
    margin $top-bottom-margin 0

.title
    font-size 14px

.actionContainer
    align-items center
    display flex

    button:last-child
        margin-left 6px
