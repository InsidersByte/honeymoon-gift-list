.root
    color rgb(154, 156, 167)
    padding 50px 0
    text-align center

    h1, h2, h3, h4, h5, h6
        color rgb(82, 105, 120)

    a
        color rgb(0, 173, 237)
        text-decoration underline

        &:hover
            color rgb(0, 173, 237)

    &:nth-child(even)
        background rgb(0, 173, 237)
        color white

        h1, h2, h3, h4, h5, h6
            color white

        a
            color white

            &:hover
                color white

    &:before
        content ' '
        display table

    &:after
        clear both
        content ' '
        display table

.content
    font-size .9em
    margin 0 25%
    padding-top 10px

    img
        height auto
        max-width 500px
        width 100%

.title
    font-size 2.5em
    text-transform capitalize
    text-align center

@media (max-width 736px)
    .content
        margin 0 5%
